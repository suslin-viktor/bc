		<custom-field action="translate">_bottom_holder</custom-field>
		<custom-field action="ignore">_header_bg_color</custom-field>
		<custom-field action="ignore">_header_bg_img</custom-field>
		<custom-field action="ignore">_header_bg_repeat</custom-field>
		<custom-field action="ignore">_header_bg_position</custom-field>
		<custom-field action="ignore">_header_bg_attachment</custom-field>
		<custom-field action="ignore">_header_bg_size</custom-field>
